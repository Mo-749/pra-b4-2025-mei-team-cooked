<Page
    x:Class="PRA_B4_FOTOKIOSK.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PRA_B4_FOTOKIOSK"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="20" Spacing="10">
        <TextBlock Text="Foto-ID:" />
        <TextBox x:Name="FotoIdBox"/>

        <TextBlock Text="Aantal:" />
        <TextBox x:Name="AantalBox"/>

        <TextBlock Text="Kies product:" />
        <ComboBox x:Name="ProductDropdown"/>

        <Button Content="Toevoegen" Click="AddButton_Click"/>
        <Button Content="Resetten" Click="ResetButton_Click"/>
        <Button Content="Opslaan" Click="SaveButton_Click"/>

        <TextBlock x:Name="ReceiptBox" TextWrapping="Wrap" Margin="0,20,0,0"/>
    </StackPanel>
</Page>
